{
  "name": "json-formatter",
  "version": "1.0.0",
  "description": "JSON格式化工具，支持格式化、转义和语法高亮",
  "main": "server.js",
  "bin": {
    "json-formatter": "./bin/cli.js"
  },
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "server": "node server.js",
    "pkg": "npm run build && pkg .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "node deploy.js",
    "deploy:gh-pages": "npm run build && npx gh-pages -d dist"
  },
  "keywords": [
    "json",
    "formatter",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.7",
    "babel-loader": "^10.0.0",
    "css-loader": "^6.8.1",
    "express": "^4.21.2",
    "html-webpack-plugin": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "gh-pages": "^6.0.0"
  },
  "pkg": {
    "targets": [
      "node16-macos-x64",
      "node16-win-x64",
      "node16-linux-x64"
    ],
    "outputPath": "bin",
    "assets": "dist/**/*"
  }
}
